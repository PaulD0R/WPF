<UserControl x:Class="WPFTest.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:WPFTest.Converters"
             xmlns:local="clr-namespace:WPFTest.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800">

    <UserControl.Resources>
        <converter:ArrayByteToImageConverter x:Key="ArrayByteToImageConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"
                               MaxHeight="500"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="2"
                    Grid.Row="0"
                    Background="#333540"
                    CornerRadius="15"
                    BorderThickness="0"
                    Margin="10"
                    Height="Auto"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBlock Foreground="White"
                               FontSize="20"
                               Text="Имя:"/>

                    <TextBlock Foreground="White"
                               FontSize="20"
                               Text="{Binding Name}"
                               Margin="5, 0, 0, 0"/>

                    <TextBlock Foreground="White"
                               FontSize="20"
                               Text="Почта:"
                               Margin="25, 0, 0, 0"/>

                    <TextBlock Foreground="White"
                               FontSize="20"
                               Text="{Binding Email}"
                               Margin="5, 0, 0, 0"/>
                </StackPanel>
            </Border>

            <Border BorderThickness="0"
                    Background="#333540"
                    CornerRadius="15"
                    Margin="5"
                    Grid.Column="0"
                    Grid.Row="1"
                    ClipToBounds="True">
                <Image Source="{Binding Image, Converter={StaticResource ArrayByteToImageConverter}}"
                       Margin="15"
                       Stretch="Uniform" />
            </Border>

            <StackPanel Orientation="Vertical"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="20">
                <Button Content="Изменить"
                        Style="{StaticResource CircleButton}"
                        Margin="10"
                        Command="{Binding ChangeImageCommand}"/>
                <Button Content="Удалить"
                        Style="{StaticResource CircleButton}"
                        Margin="10"
                        Command="{Binding DeleteImageCommand}"/>

            </StackPanel>

            <Border CornerRadius="15"
                    HorizontalAlignment="Stretch"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Background="#333540"
                    Margin="10">
                <TextBlock Text="Избранное"
                           FontSize="25"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="5"/>
            </Border>

            <ItemsControl ItemsSource="{Binding Exercises}"
                          Margin="10"
                          Grid.Row="3"
                          Grid.ColumnSpan="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                       HorizontalAlignment="Left"
                       Width="{Binding ActualWidth, 
                           RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="15"
                                Width="150" 
                                Height="150"
                                CornerRadius="15">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0, 0"
                                                    EndPoint="1, 2">
                                    <GradientStop Color="#5bc3ff" Offset="0.0"/>
                                    <GradientStop Color="#1aa3ff" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="10,5,10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Subject}"
                                               Foreground="White"
                                               FontSize="25"
                                               VerticalAlignment="Center"/>

                                    <CheckBox Grid.Column="1"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              IsChecked="{Binding IsLiked}"
                                              Style="{StaticResource LikeButtonTheme}"
                                              Command="{Binding DataContext.ChangeIsLikedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              CommandParameter="{Binding Id}"/>
                                </Grid>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding Number}"
                                           Foreground="White"
                                           FontSize="25"
                                           Margin="10,5,10,0"/>

                                <Button Grid.Row="3"
                                        Content="Открыть"
                                        Background="#5bc3ff"
                                        Style="{StaticResource CircleButton}"
                                        FontSize="15"
                                        Width="100"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Center"
                                        BorderThickness="1"
                                        Command="{Binding DataContext.ExerciseViewCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Id}"
                                        Margin="0, 0, 0, 10"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>

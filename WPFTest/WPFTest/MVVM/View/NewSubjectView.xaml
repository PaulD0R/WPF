<UserControl x:Class="WPFTest.MVVM.View.NewSubjectView"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest.MVVM.View"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:behavior="clr-namespace:WPFTest.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="450"
          MinWidth="795">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название"
                   Foreground="White"
                   FontSize="25"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Column="0"
                   Grid.Row="0"/>

        <TextBlock Text="Курс"
                   Foreground="White"
                   FontSize="25"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Column="0"
                   Grid.Row="1"/>

        <TextBlock Text="Описание"
                   Foreground="White"
                   FontSize="25"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Column="0"
                   Grid.Row="2"/>

        <toolkit:IntegerUpDown Background="#333540"
                 Value="{Binding Year}"
                 Grid.Column="1"
                 Grid.Row="1"
                 Minimum="1"
                 Increment="1"
                 ShowButtonSpinner="False"
                 Maximum="100"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 Width="80"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 BorderThickness="0">
            <i:Interaction.Behaviors>
                <behavior:ValueChangedBehavior Command="{Binding YearCommand}"/>
            </i:Interaction.Behaviors>
        </toolkit:IntegerUpDown>

        <TextBox Background="#333540"
                 Text="{Binding Name}"
                 Grid.Column="1"
                 Grid.Row="0"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Hidden"
                 BorderThickness="0">
            <i:Interaction.Behaviors>
                <behavior:TextChangedBehavior Command="{Binding NameCommand}"/>
            </i:Interaction.Behaviors>
        </TextBox>

        <TextBox Background="#333540"
                 Text="{Binding Description}"
                 Grid.Column="1"
                 Grid.Row="2"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Hidden"
                 BorderThickness="0">
            <i:Interaction.Behaviors>
                <behavior:TextChangedBehavior Command="{Binding DescriptionCommand}"/>
            </i:Interaction.Behaviors>
        </TextBox>

        <Button Grid.Column="1"
                Grid.Row="3"
                Margin="10"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Style="{StaticResource CircleButton}" 
                Content="Сохранить" 
                Width="120" 
                Height="40" 
                Foreground="White"
                Command="{Binding SaveCommand}"/>
    </Grid>
</UserControl>

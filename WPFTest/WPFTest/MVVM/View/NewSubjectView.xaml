<UserControl x:Class="WPFTest.MVVM.View.NewSubjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest.MVVM.View"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanTiVisibbilityConverter"/>
    </UserControl.Resources>
    
    <Grid Height="450"
          MinWidth="795">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название"
                   Foreground="White"
                   FontSize="25"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Column="0"
                   Grid.Row="0"/>

        <TextBlock Text="Курс"
                   Foreground="White"
                   FontSize="25"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Column="0"
                   Grid.Row="1"/>

        <TextBlock Text="Описание"
                   Foreground="White"
                   FontSize="25"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Column="0"
                   Grid.Row="2"/>

        <toolkit:IntegerUpDown Background="#333540"
                 Value="{Binding Year}"
                 Grid.Column="1"
                 Grid.Row="1"
                 Minimum="1"
                 Increment="1"
                 ShowButtonSpinner="False"
                 Maximum="100"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 Width="80"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 BorderThickness="0">
        </toolkit:IntegerUpDown>

        <TextBox Background="#333540"
                 Text="{Binding Name}"
                 Grid.Column="1"
                 Grid.Row="0"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Hidden"
                 BorderThickness="0">
        </TextBox>

        <TextBox Background="#333540"
                 Text="{Binding Description}"
                 Grid.Column="1"
                 Grid.Row="2"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Hidden"
                 BorderThickness="0">
        </TextBox>

        <Button Grid.Column="1"
                Grid.Row="3"
                Margin="10"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Style="{StaticResource CircleButton}" 
                Content="Сохранить" 
                Width="120" 
                Height="40" 
                Foreground="White"
                Command="{Binding SaveCommand}"/>


        <ContentControl Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Content="{Binding ErrorText}"
                        ContentTemplate="{StaticResource ErrorTextBlock}"
                        Visibility="{Binding IsError, Converter={StaticResource BooleanTiVisibbilityConverter}}"/>
    </Grid>
</UserControl>

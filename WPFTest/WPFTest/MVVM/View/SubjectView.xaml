<UserControl x:Class="WPFTest.MVVM.View.SubjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFTest.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#333540"
                CornerRadius="25"
                HorizontalAlignment="Stretch"
                Height="100">
            <StackPanel Orientation="Horizontal"
                        Margin="20">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Предмет"
                               FontSize="10"
                               Foreground="White"
                               Margin="5, 5, 0, 0"/>

                    <TextBlock Text="{Binding Name}"
                               FontSize="25"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="40, 0, 0, 0">
                    <TextBlock Text="Курс"
                               FontSize="10"
                               Foreground="White"
                               Margin="5, 5, 0, 0"/>

                    <TextBlock Text="{Binding Year}"
                               FontSize="25"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="40, 0, 0, 0">
                    <TextBlock Text="Описание"
                               FontSize="10"
                               Foreground="White"
                               Margin="5, 5, 0, 0"/>

                    <TextBlock Text="{Binding Description}"
                               FontSize="25"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Hidden"
                      Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Exercises}"
                          Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Left"
                                   Width="{Binding ActualWidth, 
                                       RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="15"
                                Width="150" 
                                Height="150"
                                CornerRadius="15">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0, 0"
                                                     EndPoint="1, 2">
                                    <GradientStop Color="#5bc3ff" Offset="0.0"/>
                                    
                                    <GradientStop Color="#1aa3ff" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="10,5,10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Subject}"
                                               Foreground="White"
                                               FontSize="25"
                                               VerticalAlignment="Center"/>

                                    <CheckBox Grid.Column="1"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              IsChecked="{Binding IsLiked}"
                                              Style="{StaticResource LikeButtonTheme}"
                                              Command="{Binding DataContext.ChangeIsLikedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              CommandParameter="{Binding Id}"/>
                                </Grid>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding Number}"
                                           Foreground="White"
                                           FontSize="25"
                                           Margin="10,5,10,0"/>

                                <Button Grid.Row="3"
                                        Content="Открыть"
                                        Background="#5bc3ff"
                                        Style="{StaticResource CircleButton}"
                                        FontSize="15"
                                        Width="100"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Center"
                                        BorderThickness="1"
                                        Command="{Binding DataContext.ExerciseViewCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Id}"
                                        Margin="0, 0, 0, 10"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

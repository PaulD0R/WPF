<Application x:Class="WPFTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFTest"
             xmlns:viewModel="clr-namespace:WPFTest.MVVM.ViewModel"
             xmlns:view="clr-namespace:WPFTest.MVVM.View"
             xmlns:converter="clr-namespace:WPFTest.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/ButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/TextBoxTheme.xaml"/>
                <ResourceDictionary Source="/Theme/CloseMenuButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/PageButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/CircleButton.xaml"/>
                <ResourceDictionary Source="/Theme/ChangeButton.xaml"/>
                <ResourceDictionary Source="/Theme/LikeButton.xaml"/>
                <ResourceDictionary Source="/Theme/ErrorTextBlock.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converter:ViewModelConverter x:Key="ViewModelCoverter"/>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewModel:DiscoverViewModel}">
                <view:DiscoverView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:NewExerciseViewModel}">
                <view:NewExercisesView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:NewSubjectViewModel}">
                <view:NewSubjectView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SignupViewModel}">
                <view:SigninView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SigninViewModel}">
                <view:SignupView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:ExerciseViewModel}">
                <view:ExerciseView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SubjectViewModel}">
                <view:SubjectView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:PersonViewModel}">
                <view:PersonView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:ErrorViewModel}">
                <view:ErrorView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

<Window x:Class="WPFTest.MainWindow"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        xmlns:viewModel="clr-namespace:WPFTest.MVVM.ViewModel"
        xmlns:converter="clr-namespace:WPFTest.Converters" 
        xmlns:behavior="clr-namespace:WPFTest.Behaviors"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="First WPF" Height="567" Width="1008"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:BooleanToWidthConverter x:Key="BooleanToWidthConverter"/>
    </Window.Resources>

    <Border Background="#272537"
            CornerRadius="{Binding Radius}">
        <Viewbox Stretch="Uniform">
            <Grid Height="567"
              Width="1008">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding IsMenuVisible, Converter={StaticResource BooleanToWidthConverter}}"
                                      x:Name="Menu"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="52*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Visibility="{Binding IsMenuVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="СвЭг"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="White"
                           FontSize="30"
                           Margin="20,0,0,0"/>
                </Border>

                <StackPanel Grid.Row="1"
                        Visibility="{Binding IsMenuVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <RadioButton Content="Профиль" 
                             Height="50"
                             FontSize="30"
                             Foreground="White"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="{Binding IsHome}"
                             Command="{Binding HomeCommand}"/>

                    <RadioButton Content="Задания" 
                             Height="50"
                             FontSize="30"
                             Foreground="White"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="{Binding IsDiscover}"
                             Command="{Binding DiscoverCommand}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Grid.RowSpan="3"
                        Command="{Binding ChangeMenuCommand}"
                        Style="{StaticResource CloseMenuButtonTheme}"/>

                <StackPanel Orientation="Vertical"
                            Grid.Column="2">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="5">
                        <Button Height="25"
                                Width="25"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="ChangeSizeButton_Click"
                                Command="{Binding ChangeWindowSizeCommand}">
                            <Image Source="/Images/FullSize.png"
                                   Width="20"
                                   Height="20"/>
                        </Button>

                        <Button Height="25"
                                Width="25"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="CloseButton_Click">
                            <Image Source="/Images/Close.png"
                                   Width="20"
                                   Height="20"/>
                        </Button>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="250"
                                     Height="40"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     Margin="10,0,0,0"
                                     Foreground="DarkGray"
                                     Style="{StaticResource ModerTextBox}"
                                     Text="{Binding FindName}">
                                <i:Interaction.Behaviors>
                                    <behavior:TextChangedBehavior Command="{Binding FindNameCommand}"/>
                                </i:Interaction.Behaviors>
                            </TextBox>

                            <Button Height="35"
                                    Width="35"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    HorizontalAlignment="Left"
                                    Command="{Binding FindPersonCommand}">
                                <Image Source="/Images/Find.png"
                                       Width="30"
                                       Height="30"/>
                            </Button>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Style="{StaticResource CircleButton}" 
                                Content="Добавить задание" 
                                Width="200" 
                                Height="40" 
                                Margin="0, 0, 10, 0"
                                Foreground="White"
                                Command="{Binding NewExercisesCommand}"
                                Visibility="{Binding IsAddVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>

                <ContentControl Content="{Binding CurrentView}"
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            Margin="10"
                            MinHeight="100"
                            MinWidth="100"/>
            </Grid>
        </Viewbox>
    </Border>
</Window>

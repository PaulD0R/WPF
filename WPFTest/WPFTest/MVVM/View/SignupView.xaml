<UserControl x:Class="WPFTest.MVVM.View.SigninView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest.MVVM.View"
             xmlns:behavior="clr-namespace:WPFTest.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid VerticalAlignment="Stretch"
          Height="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Content="{Binding ErrorText}"
                        ContentTemplate="{StaticResource ErrorTextBlock}"
                        Visibility="{Binding IsError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <TextBlock Text="Имя"
                   FontSize="30"
                   Foreground="White"
                   Grid.Row="1"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>

        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Background="#333540"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 BorderThickness="0"
                 Text="{Binding Name}"/>

        <TextBlock Text="Почта"
                   FontSize="30"
                   Foreground="White"
                   Grid.Row="2"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>

        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Background="#333540"
                 Foreground="White"
                 FontSize="25"
                 Margin="10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 BorderThickness="0"
                 Text="{Binding Email}"/>

        <TextBlock Text="Пароль"
                   FontSize="30"
                   Foreground="White"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="10, 0, 0, 0"/>

        <PasswordBox Grid.Row="3"
                     Grid.Column="1"
                     Background="#333540"
                     Foreground="White"
                     FontSize="25"
                     Margin="10"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     BorderThickness="0"
                     MaxLength="15"
                     PasswordChar="•"
                     >
            <i:Interaction.Behaviors>
                <behavior:PasswordBoxBehavior Password="{Binding Password}"/>
            </i:Interaction.Behaviors>
        </PasswordBox>

        <Button Content="Регистрация"
                Style="{StaticResource CircleButton}"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                FontSize="25"
                Height="50"
                Command="{Binding SignupCommand}"/>
    </Grid>
</UserControl>

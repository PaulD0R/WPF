<UserControl x:Class="WPFTest.MVVM.View.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Hidden"
                  HorizontalAlignment="Stretch">
        <ItemsControl Margin="10"
                      ItemsSource="{Binding Users}"
                      HorizontalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" 
                               HorizontalAlignment="Stretch"
                               ItemWidth="780"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="15"
                            Background="#1aa3ff"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            Margin="10">
                        <StackPanel Orientation="Vertical"
                                Margin="5, 5, 5, 0">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding Id}"
                                           FontSize="10"
                                           Foreground="White"
                                           Margin="5"
                                           Grid.Column="0"/>

                                <Button Background="Transparent"
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        BorderThickness="0"
                                        Grid.Column="1"
                                        Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}">
                                    <Image Source="/Images/Delete.png"
                                           Width="15"/>
                                </Button>
                            </Grid>

                            <ContentControl Content="{Binding ErrorText}"
                                Visibility="{Binding IsError, Converter={StaticResource BooleanToVisibilityConverter}}"
                                ContentTemplate="{StaticResource ErrorTextBlock}"
                                Margin="5, 0, 5, 0"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Имя:"
                                           FontSize="25"
                                           Foreground="White"
                                           Margin="5, 5, 5, 2"/>
                                
                                <TextBox Text="{Binding Name}"
                                         FontSize="25"
                                         Foreground="Black"
                                         Margin="0, 5, 5, 5"
                                         Width="150"/>

                                <TextBlock Text="Почта:"
                                           FontSize="25"
                                           Foreground="White"
                                           Margin="10, 5, 5, 2"/>

                                <TextBox Text="{Binding Email}"
                                         FontSize="25"
                                         Foreground="Black"
                                         Margin="0, 5, 5, 5"
                                         Width="300"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Margin="5">
                                <Button Margin="5"
                                        Content="Сохранить"
                                        FontSize="25"
                                        Foreground="White"
                                        Background="#5bc3ff"
                                        Style="{StaticResource CircleButton}"
                                        Command="{Binding DataContext.UpdateUserCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"/>

                                <Button Margin="5"
                                        Content="Повысить"
                                        FontSize="25"
                                        Foreground="White"
                                        Background="#5bc3ff"
                                        BorderThickness="0"
                                        Style="{StaticResource CircleButton}"
                                        Command="{Binding DataContext.ChangeRoleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>

                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding DataContext.GetCommentsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}"
                                    Margin="8, 3, 8, 0">
                                <Image Source="/Images/Open.png"
                                       Width="20"
                                       HorizontalAlignment="Center"/>
                            </Button>

                            <ItemsControl Margin="5"
                                          ItemsSource="{Binding Comments}"
                                          Visibility="{Binding IsVisibleComments, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"
                                                   HorizontalAlignment="Left"
                                                   Width="{Binding ActualWidth, 
                                                       RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                CornerRadius="15"
                                                BorderThickness="0"
                                                Margin="5">
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock FontSize="20"
                                                           Foreground="Black"
                                                           Text="{Binding Text}"
                                                           TextWrapping="Wrap"
                                                           Width="700"
                                                           Grid.Column="0"/>

                                                <Button VerticalAlignment="Center"
                                                        Background="Transparent"
                                                        Grid.Column="1"
                                                        BorderThickness="0"
                                                        Command="{Binding DataContext.DeleteCommentCommand, 
                                                                      RelativeSource={RelativeSource AncestorType=ItemsControl, 
                                                                      AncestorLevel=2}}"
                                                        CommandParameter="{Binding}">
                                                    <Image Source="/Images/Delete.png"
                                                           VerticalAlignment="Center"
                                                           Width="25"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>

<Window x:Class="WPFTest.MainWindow"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        xmlns:viewModel="clr-namespace:WPFTest.MVVM.ViewModel"
        xmlns:converter="clr-namespace:WPFTest.Converters" 
        xmlns:behavior="clr-namespace:WPFTest.Behaviors"
        xmlns:viewModels="clr-namespace:WPFTest.MVVM.ViewModel.Interfaces"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="First WPF" Height="567" Width="1008"
        Background="Transparent">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding HomeCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="#272537"
            CornerRadius="15"
            ClipToBounds="True"
            x:Name="MainBorder">
        <Viewbox Stretch="Uniform">
            <Grid Height="567"
              Width="1008">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*"
                                      x:Name="Menu"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="52*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Visibility="Visible"
                        x:Name="MenuBorder">
                    <TextBlock Text="СвЭг"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="White"
                           FontSize="30"
                           Margin="20,0,0,0"/>
                </Border>

                <StackPanel Grid.Row="1"
                            x:Name="MenuStack"
                            Visibility="Visible">
                    <RadioButton Content="Профиль" 
                             Height="50"
                             FontSize="30"
                             Foreground="White"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="{Binding IsHome}"
                             Command="{Binding HomeCommand}"/>

                    <RadioButton Content="Задания" 
                             Height="50"
                             FontSize="30"
                             Foreground="White"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="{Binding IsDiscover}"
                             Command="{Binding DiscoverCommand}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Grid.RowSpan="3"
                        Style="{StaticResource CloseMenuButtonTheme}"
                        Click="ChangeMenuButton_Click"/>

                <StackPanel Orientation="Vertical"
                            Grid.Column="2">
                    <Grid HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="5">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button  Grid.Column="0"
                                 Height="25"
                                 Width="25"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 HorizontalAlignment="Left"
                                 Command="{Binding BackCommand}">
                            <Image Source="/Images/Back.png"
                                   Width="20"
                                   Height="20"/>
                        </Button>

                        <Button  Grid.Column="1"
                                Height="25"
                                Width="25"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="ChangeSizeButton_Click">
                            <Image Source="/Images/FullSize.png"
                                   Width="20"
                                   Height="20"/>
                        </Button>

                        <Button Grid.Column="2"
                                Height="25"
                                Width="25"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="CloseButton_Click">
                            <Image Source="/Images/Close.png"
                                   Width="20"
                                   Height="20"/>
                        </Button>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="250"
                                     Height="40"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     Margin="10,0,0,0"
                                     Foreground="DarkGray"
                                     Style="{StaticResource ModerTextBox}"
                                     Text="{Binding FindName}">
                            </TextBox>

                            <Button Height="35"
                                    Width="35"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    HorizontalAlignment="Left"
                                    Command="{Binding FindPersonCommand}">
                                <Image Source="/Images/Find.png"
                                       Width="30"
                                       Height="30"/>
                            </Button>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Right"
                                    Orientation="Horizontal"
                                    Grid.Column="1">
                            <Button Style="{StaticResource CircleButton}" 
                                Content="Админ" 
                                Width="200" 
                                Height="40" 
                                Margin="0, 0, 10, 0"
                                Foreground="White"
                                Command="{Binding AdminCommand}"
                                Visibility="{Binding IsAddVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <Button Style="{StaticResource CircleButton}" 
                                Content="Добавить задание" 
                                Width="200" 
                                Height="40" 
                                Margin="0, 0, 10, 0"
                                Foreground="White"
                                Command="{Binding NewExercisesCommand}"
                                Visibility="{Binding IsAddVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <ContentControl Content="{Binding CurrentView}"
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            Margin="10"
                            MinHeight="100"
                            MinWidth="100"/>
            </Grid>
        </Viewbox>
    </Border>
</Window>

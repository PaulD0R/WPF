<UserControl x:Class="WPFTest.MVVM.View.ExerciseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest.MVVM.View"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converter="clr-namespace:WPFTest.Converters"
             xmlns:behavior="clr-namespace:WPFTest.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Border>
        <ScrollViewer Visibility="{Binding IsLoaded, Converter={StaticResource BooleanToVisibilityConverter}}"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Hidden">
            <StackPanel Orientation="Vertical"
                        Width="800">
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Height="400"
                           Width="300"
                           Grid.Column="0"
                           Source="/Images/NotFound.png"
                           Margin="30"/>

                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Left"
                                Margin="30"
                                Grid.Column="1">
                        <Border Background="#333540"
                                CornerRadius="10"
                                VerticalAlignment="Center">
                            
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding SubjectViewCommand}"
                                                           CommandParameter="{Binding SubjectId}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            
                            <Grid Margin="20, 0, 0, 0"
                                  HorizontalAlignment="Stretch"
                                  Width="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Orientation="Vertical"
                                            Grid.Column="0">
                                    <TextBlock Text="Предмет"
                                               FontSize="10"
                                               Foreground="White"
                                               Margin="5, 5, 0, 0"/>

                                    <TextBlock Text="{Binding Subject}"
                                               FontSize="25"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               Margin="0, 0, 0, 5"/>
                                </StackPanel>

                                <StackPanel Orientation="Vertical"
                                            Margin="40, 0, 0, 0"
                                            Grid.Column="1">
                                    <TextBlock Text="Курс"
                                               FontSize="10"
                                               Foreground="White"
                                               Margin="5, 5, 20, 0"/>

                                    <TextBlock Text="{Binding Year}"
                                               FontSize="25"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               Margin="10, 0, 0, 0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <TextBlock Text="Номер"
                                   FontSize="10"
                                   Foreground="White"
                                   Margin="5, 20, 0, 0"/>
                        
                        <TextBlock Text="{Binding Number}"
                                   FontSize="25"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Задание"
                                   FontSize="10"
                                   Foreground="White"
                                   Margin="5, 20, 0, 0"/>
                        
                        <TextBlock Text="{Binding Task}"
                                   FontSize="25"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                        <Button Content="Скачать"
                                Style="{StaticResource CircleButton}"
                                Margin="20"
                                Command="{Binding LoadTasksFileCommand}"/>

                        <Border HorizontalAlignment="Stretch"
                                Margin="10"
                                CornerRadius="15"
                                Background="#333540">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsLiked}"
                                         Style="{StaticResource LikeButtonTheme}"
                                         Command="{Binding ChangeIsLikedCommand}"
                                         CommandParameter="{Binding Id}"
                                          Margin="10, 0, 0, 0"/>
                                
                                <TextBlock Text="{Binding LikesCount}"
                                           FontSize="25"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="5, 0, 0, 0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border Background="#333540"
                        Margin="15, 20, 15, 5"
                        CornerRadius="15"
                        Height="Auto"
                        Width="Auto"
                        HorizontalAlignment="Stretch">
                    <TextBlock Background="Transparent"
                               Text="Комментарии"
                               Foreground="White"
                               FontSize="35"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="5"/>
                </Border>

                <ContentControl Content="{Binding ErrorText}"
                                Visibility="{Binding IsError, Converter={StaticResource BooleanToVisibilityConverter}}"
                                ContentTemplate="{StaticResource ErrorTextBlock}"
                                Margin="5, 0, 5, 0"/>


                <Border CornerRadius="15"
                        Background="#333540"
                        Margin="15, 0, 15, 20"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical"
                                Margin="5"
                                HorizontalAlignment="Stretch">
                        <Grid>
                            <TextBlock Text="Новый комментарий"
                                       FontSize="20"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="15, 0, 0, 0"/>

                            <Button Content="Написать"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource CircleButton}"
                                    Command="{Binding CreateCommentCommand}"/>
                        </Grid>

                        <TextBox Background="DimGray"
                                 Text="{Binding NewCommentText}"
                                 Foreground="White"
                                 FontSize="15"
                                 Margin="10"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Height="100"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Hidden"
                                 BorderThickness="0"/>
                    </StackPanel>
                </Border>
                
                <ItemsControl ItemsSource="{Binding Comments}"
                              Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical"
                                   HorizontalAlignment="Left"
                                   Width="{Binding ActualWidth, 
                                       RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="15"
                                    Background="#333540"
                                    BorderThickness="0"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text='{Binding UserName}'
                                               FontSize="20"
                                               Foreground="White"
                                               Margin="15, 15, 15, 5"/>

                                    <TextBlock Text="{Binding Text}"
                                               FontSize="15"
                                               Foreground="White"
                                               Margin="15, 0, 15, 5"
                                               TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding Date}"
                                               FontSize="10"
                                               Foreground="White"
                                               Margin="15, 0, 15, 15"
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
